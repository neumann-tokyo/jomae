#!/bin/bash
set -Ceu

ARGS=${@:2}
if [ -z $JOMAE_EMAIL ] || [ -z $JOMAE_DIR ] || [ -z $JOMAE_EDITOR ]; then
  echo "You should set JOMAE_EMAIL,JOMAE_DIR,JOMAE_EDITOR"
  exit 1
fi

case ${1} in
"setup") ##
  mkdir -p $JOMAE_DIR
  echo "url,id,password,memo" > $JOMAE_DIR/password.csv
  gpg --encrypt --recipient $JOMAE_EMAIL $JOMAE_DIR/password.csv
  rm $JOMAE_DIR/password.csv
;;
"search" | "s") ##
  gpg --decrypt $JOMAE_DIR/password.csv.gpg 2>/dev/null | grep -i -E ${2} | head
;;
"id") ##
  jomae search ${2} | cut -d "," -f 2
;;
"password" | "p") ##
  jomae search ${2} | cut -d "," -f 3
;;
"generate" | "g") ##
  if [ -z $ARGS ] 2>/dev/null; then
    pwgen -y 20 1
  elif [ "$2" -eq "$2" ] 2>/dev/null; then # $2 is integer
    pwgen -y $2 1
  else
    pwgen $ARGS 1
  fi
;;
"add") ##
  gpg --decrypt --output $JOMAE_DIR/password.csv $JOMAE_DIR/password.csv.gpg
  echo ${2} >> $JOMAE_DIR/password.csv
  gpg --encrypt --recipient $JOMAE_EMAIL $JOMAE_DIR/password.csv
  rm $JOMAE_DIR/password.csv
;;
"edit") ##
  gpg --decrypt --output $JOMAE_DIR/password.csv $JOMAE_DIR/password.csv.gpg
  $JOMAE_EDITOR $JOMAE_DIR/password.csv
  gpg --encrypt --recipient $JOMAE_EMAIL $JOMAE_DIR/password.csv
  rm $JOMAE_DIR/password.csv
;;
"help" | *)
  (
    echo "HELP"
    echo "  COMMAND ) DESCRIPTION"
    \grep -E "\)\ *\##" ${0}
  ) | column -t -s "\)"
  ;;
esac
